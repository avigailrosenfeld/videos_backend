{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server.py",
                "FLASK_ENV": "development",
            },
            "args": [
                "run", "--host", "0.0.0.0", "--port", "8000", "--no-debugger",
            ],
            "console": "integratedTerminal"
        }
    ]
}