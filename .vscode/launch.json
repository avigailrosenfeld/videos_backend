{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "app",
            "args": [
                "dev.env"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Flask Test",
            "type": "python",
            "request": "launch",
            "module": "app",
            "args": [
                "test.env"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run API Tests",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/tests/run_tests.py",
            "cwd": "${workspaceRoot}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": []
        },
    ]
}